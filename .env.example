# ==========================================
# DISCORD BOT CONFIGURATION
# ==========================================

# Discord Bot Token from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Discord Client ID (Application ID)
CLIENT_ID=your_client_id_here

# Discord Client Secret (for OAuth2)
CLIENT_SECRET=your_client_secret_here

# Bot Owner Discord ID (has highest permissions)
BOT_OWNER_ID=your_discord_user_id_here

# Guild ID for testing commands (optional)
GUILD_ID=your_test_guild_id_here

# ==========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==========================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=whitecat
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==========================================
# WEB SERVER CONFIGURATION
# ==========================================

# Server listening configuration (internal)
ORIGIN_PORT=2082
ORIGIN_URL=0.0.0.0

# Public URL mask (for production behind reverse proxy/CDN)
# Khi bot chạy sau nginx/cloudflare, bot lắng nghe internal (ORIGIN_PORT)
# nhưng user truy cập qua domain public (MASK_URI)
#
# Example production:
#   Bot internal:  http://0.0.0.0:2082
#   Public URL:    https://bot.yourdomain.com
#   → OAuth redirect: https://bot.yourdomain.com/auth/callback
#
# Nếu để trống MASK_URI → dùng localhost (development mode)
MASK_URI=
MASK_PORT=443
MASK_SSL=true

# Allowed domains for CORS (comma-separated)
ALLOW_DOMAIN=localhost,127.0.0.1

# ==========================================
# LOGGING
# ==========================================

# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# ==========================================
# PTERODACTYL PANEL (Optional - for hosting features)
# ==========================================

# PTERODACTYL_URL=https://panel.yourdomain.com
# PTERODACTYL_API_KEY=your_pterodactyl_api_key_here

# ==========================================
# PAYMENT GATEWAY (Optional)
# ==========================================

# PAYMENT_WEBHOOK_SECRET=your_webhook_secret_here

# ==========================================
# REDIS (Optional - for caching)
# ==========================================

# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ==========================================
# OTHER SETTINGS
# ==========================================

# Default language (en, vi)
DEFAULT_LOCALE=en-US

# Bot prefix for legacy commands (optional)
BOT_PREFIX=!

# Environment (development, production)
NODE_ENV=development
