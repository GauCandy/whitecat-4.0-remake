# ==========================================
# DISCORD BOT CONFIGURATION
# ==========================================

# Discord Bot Token from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# Discord Client ID (Application ID)
CLIENT_ID=your_client_id_here

# Discord Client Secret (for OAuth2)
CLIENT_SECRET=your_client_secret_here

# Bot Owner Discord ID (has highest permissions)
BOT_OWNER_ID=your_discord_user_id_here

# Guild ID for testing commands and auto-generated server invites
# The bot will automatically generate an invite link for this server on OAuth success pages
GUILD_ID=your_guild_id_here

# ==========================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==========================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=whitecat
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==========================================
# WEB SERVER CONFIGURATION
# ==========================================

# API Port
API_PORT=3000

# OAuth Redirect URI (must match in Discord Developer Portal)
REDIRECT_URI=http://localhost:3000/auth/callback

# CORS Origin (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000

# ==========================================
# LOGGING
# ==========================================

# Log level: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info


# ==========================================
# REDIS (Optional - for caching)
# ==========================================

# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ==========================================
# OTHER SETTINGS
# ==========================================

# Default language (en, vi)
DEFAULT_LOCALE=en-US

# Bot prefix for legacy commands (optional)
BOT_PREFIX=,

# Environment (development, production)
NODE_ENV=development
